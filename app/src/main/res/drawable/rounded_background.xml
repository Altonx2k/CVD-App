<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Light gray shadow -->
            <corners android:radius="36dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Main background layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            android:color="@color/white"/> <!-- White background -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>

</layer-list>
